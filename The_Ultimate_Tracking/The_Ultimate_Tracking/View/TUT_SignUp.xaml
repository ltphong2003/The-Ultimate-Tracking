<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="The_Ultimate_Tracking.View.TUT_SignUp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Thêm phương tiện" 
                   TextDecorations="Underline" 
                   HorizontalOptions="Center"/>
            <Label x:Name="imeinum" 
                   Text="{Binding imei, StringFormat='Số imei của bạn là {0:F0}'}"/>
            <Label x:Name="VehicleID" 
                   Text="{Binding vehicle_id, StringFormat='Vehicle ID của bạn là {0:F0}'}"/>
            <Entry x:Name="Nameentery" Placeholder="Tên phương tiện" 
                   Text="{Binding name}" />
            <Entry x:Name="Numberentery" Placeholder="Biển số xe" 
                   Text="{Binding lpn}" />
            <Button x:Name="signupvehicle" Text="Thêm phương tiện" 
                    Command="{Binding SignUpVehicleCommand}" 
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>